<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl"
    android:padding="20dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/personal_name"
            android:text="威少威少威少"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="54dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dress"
            android:text="撩Ta"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_tv"
            app:layout_constraintTop_toTopOf="@id/personal_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="40dp"
            android:layout_height="20dp"/>
        <TextView
            android:text="关注"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_focus"
            app:layout_constraintTop_toTopOf="@id/personal_name"
            app:layout_constraintRight_toLeftOf="@id/dress"
            android:layout_width="40dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/personal_constant"
            app:layout_constraintTop_toBottomOf="@id/personal_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fans_num"
            app:layout_constraintTop_toBottomOf="@id/personal_name"
            android:layout_marginTop="50dp"
            android:text="177"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fans"
            android:layout_marginTop="10dp"
            android:text="粉丝"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/fans_num"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/personal_focus_num"
            app:layout_constraintTop_toBottomOf="@id/personal_name"
            android:layout_marginTop="50dp"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="@id/fans_num"
            android:layout_marginRight="98dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/personal_focus"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/personal_focus_num"
            app:layout_constraintRight_toLeftOf="@id/fans"
            android:layout_marginRight="80dp"
            android:text="关注"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/personal_experience_num"
            app:layout_constraintTop_toBottomOf="@id/personal_name"
            android:layout_marginTop="50dp"
            android:text="1450"
            android:textSize="20sp"
            android:layout_marginLeft="80dp"
            app:layout_constraintLeft_toRightOf="@id/fans_num"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/personal_experience"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/personal_experience_num"
            app:layout_constraintLeft_toRightOf="@id/fans"
            android:layout_marginLeft="70dp"
            android:text="经验值"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/personal_head_img"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="70dp"
        android:layout_height="70dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>